<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Разрешение для чтения изображений из галереи (для Android 13+) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <!-- Совместимость с более старыми версиями Android -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:name=".MyStoryApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="My Story"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.My_story_rc"
        tools:targetApi="31">

        <!-- SplashActivity — точка входа -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- WelcomeActivity — приветствие и "регистрация" -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="false" />

        <!-- MainActivity — основной экран с BottomNavigation -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- StoryDetailActivity — детали истории -->
        <activity
            android:name=".StoryDetailActivity"
            android:exported="false" />

        <!-- ProfileActivity — профиль пользователя -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />

        <!-- SettingsActivity — настройки -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false" />

        <!-- StoriesActivity (если используется отдельно от MainActivity) -->
        <activity
            android:name=".StoriesActivity"
            android:exported="false" />

        <!-- SearchActivity -->
        <activity
            android:name=".SearchActivity"
            android:exported="false" />

    </application>

</manifest>