<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <!-- FrameLayout для наложения элементов -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Обложка истории -->
        <ImageView
            android:id="@+id/storyCoverGrid"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/thecoverismissing"
            android:contentDescription="Обложка истории" />

        <!-- TextView для названия истории (поверх обложки, прижат к низу) -->
        <TextView
            android:id="@+id/storyTitleGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="#3574e8"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:padding="4dp" />

    </FrameLayout>

</androidx.cardview.widget.CardView>