<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/darkfifty"> <!-- Используем ваш фон -->

    <!-- Верхняя панель -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_dark_blue_overlay"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Кнопка "Назад к списку" -->
        <Button
            android:id="@+id/btnBackToStoryList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назад"
            android:background="@drawable/button_purple_rounded" />

        <!-- Заголовок главы -->
        <TextView
            android:id="@+id/chapterTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Название главы"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_vertical" />

    </LinearLayout>

    <!-- Содержимое главы -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <TextView
            android:id="@+id/chapterContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Содержимое главы..."
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp" />

    </ScrollView>

    <!-- Нижняя панель навигации -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_dark_blue_overlay"
        android:padding="8dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnPrevChapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Предыдущая"
            android:background="@drawable/button_purple_rounded" />

        <Button
            android:id="@+id/btnNextChapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Следующая"
            android:background="@drawable/button_purple_rounded" />

    </LinearLayout>

</LinearLayout>