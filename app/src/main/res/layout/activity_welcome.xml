<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- "Добро пожаловать!" -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Добро пожаловать!"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- "Как я могу к вам обращаться?" / "Дата рождения: ..." / "Придумайте пароль" -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Как я могу к вам обращаться?"
            android:textColor="#E0E0E0"
            android:textSize="22sp" />

        <!-- Поле ввода никнейма -->
        <EditText
            android:id="@+id/nicknameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="#30FFFFFF"
            android:hint="Ваш никнейм"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC" />

        <!-- Поле ввода даты рождения (предполагается, что оно уже есть и управляется в WelcomeActivity) -->
        <!-- <TextView ... android:id="@+id/birthDateDisplay" ... /> -->
        <!-- <Button ... android:id="@+id/datePickerButton" ... /> -->

        <!-- Поле ввода пароля (изначально скрыто) -->
        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#30FFFFFF"
            android:hint="Введите пароль"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:visibility="gone" />

        <!-- Поле подтверждения пароля (изначально скрыто) -->
        <EditText
            android:id="@+id/passwordConfirmInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="#30FFFFFF"
            android:hint="Подтвердите пароль"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:visibility="gone" />

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="220dp"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_gradient"
            android:text="Далее"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>